{
  "name": "node-api-example",
  "version": "1.0.0",
  "description": "Nodejs api example",
  "main": "./dist/bin/www",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc && npm run copy-assets",
    "prestart": "npm run build",
    "start": "node -r ts-node/register ./src/bin/www.ts",
    "start:dev": "nodemon",
    "start:prod": "npm run prebuild && npm run prestart && node ./dist/bin/www.js",
    "copy-assets": "ts-node ./src/tools/copyAssets",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf ./dist && rimraf ./node_modules"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wasck/node-api-example.git"
  },
  "keywords": [
    "node",
    "api"
  ],
  "author": "wschik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wasck/node-api-example/issues"
  },
  "homepage": "https://github.com/wasck/node-api-example#readme",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.18.2",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "2.0.0-beta11",
    "require-dir": "^1.2.0",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/morgan": "^1.9.0",
    "@types/require-dir": "^1.0.1",
    "@types/shelljs": "^0.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/http-errors": "^1.6.3",
    "@types/node": "^14.0.13",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",
    "winston": "^3.2.1"
  }
}
